    <ControlTemplate x:Key="ThemeButton" TargetType="{x:Type RadioButton}">
        <Border   Name="border" Background="Transparent" CornerRadius="15">
            <Ellipse Name="ellipse" Stroke="{DynamicResource Color_ButtonBorder}" Fill ="{TemplateBinding Background}"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="ellipse" Property="Stroke" Value="{DynamicResource ResourceKey=Color_ButtonBorderFocus}"></Setter>
            </Trigger>
            <Trigger Property="IsChecked" Value="True">
                <Setter TargetName="ellipse" Property="Stroke" Value="{DynamicResource ResourceKey=Color_ButtonBorderPress}"></Setter>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

